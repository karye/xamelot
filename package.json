{
    "name": "xamelot",
    "displayName": "Xamelot",
    "description": "XAML completion",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "main": "./out/extension.js",
    "icon": "images/xml.png",
    "activationEvents": [
        "onLanguage:xaml",
        "onCommand:xamelot.refresh"
    ],
    "contributes": {
        "commands": [
            {
                "command": "xamelot.Refresh",
                "title": "Refresh XAML completions"
            }
        ],
        "languages": [
            {
                "id": "xaml",
                "extensions": [
                    ".xaml"
                ],
                "aliases": [
                    "XAML"
                ]
            }
        ],
        "grammars": [
            {
                "language": "xaml",
                "scopeName": "source.xaml",
                "path": "./syntax/xaml.tmLanguage.json"
            }
        ]
    },
    "keywords": [
        "xaml",
        "avalonia",
        "wpf"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.96.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^8.19.1",
        "@typescript-eslint/parser": "^8.19.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.17.0",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "xml2js": "^0.6.2"
    }
}