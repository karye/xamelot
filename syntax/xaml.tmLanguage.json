{
  "scopeName": "source.xaml",
  "patterns": [
    {
      "include": "#elements"
    }
  ],
  "repository": {
    "elements": {
      "patterns": [
        {
          "name": "entity.name.tag.xaml",
          "begin": "<([a-zA-Z0-9_]+)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag.xaml"
            }
          },
          "end": ">",
          "patterns": [
            {
              "include": "#attributes"
            }
          ]
        },
        {
          "name": "entity.name.tag.xaml",
          "begin": "</([a-zA-Z0-9_]+)>",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag.xaml"
            }
          },
          "end": "(?=>)"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.xaml",
          "match": "\\b([a-zA-Z0-9_:-]+)\\b",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.xaml"
            }
          }
        },
        {
          "name": "string.quoted.double.xaml",
          "begin": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.xaml"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.xaml"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.xaml",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}